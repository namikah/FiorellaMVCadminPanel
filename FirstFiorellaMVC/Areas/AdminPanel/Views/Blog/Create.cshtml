@model Blog
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add Blog</h4>
                    <p class="card-description">Please fill below</p>
                    <form class="forms-sample" method="post"> @*!!!*@
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input class="form-control" id="exampleInputUsername1" placeholder="name" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Image">Image</label>
                            <input class="form-control" id="exampleInputUsername1" placeholder="image name (ex: image1.jpg)" asp-for="Image">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Context">Context</label>
                            <input class="form-control" id="exampleInputUsername1" placeholder="context" asp-for="Context">
                            <span asp-validation-for="Context" class="text-danger"></span>
                        </div>
                           <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <input class="form-control" id="exampleInputUsername1" placeholder="description" asp-for="Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                          <div class="form-group">
                            <label asp-for="Datetime">Context</label>
                            <input class="form-control" id="exampleInputUsername1" placeholder="date" asp-for="Datetime">
                            <span asp-validation-for="Datetime" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

