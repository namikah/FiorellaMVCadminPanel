@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    Blog blog = Model;
}

<div class="col-md-12 grid-margin stretch-card container">
    <div class="card">
        <div class="card-body row justify-content-center">
            <div class="col-6"><img class="img-fluid" src="~/img/@blog.Image"><img /></div>
            <div class="col-6">
                <h2 class="card-description text-danger">@blog.Name</h2>
                <p class="text-lowercase">Context: @blog.Context</p>
                <p class="text-lowercase">Post date: @blog.Datetime.ToShortDateString()</p>
            </div>

        </div>
    </div>
</div>

